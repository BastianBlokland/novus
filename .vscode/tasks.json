{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/build.sh",
      "presentation": {
        "echo": true,
        "panel": "shared",
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "watch.nov",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/watch_nov.sh",
      "args": [
        "${workspaceFolder}",
        "${workspaceFolder}/bin/novc"
      ],
      "isBackground": true,
      "problemMatcher": "$novus"
    }
  ]
}
