{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build.debug",
      "type": "shell",
      "command": "make build.debug",
      "presentation": {
        "echo": true,
        "panel": "shared",
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "build.release",
      "type": "shell",
      "command": "make build.release",
      "presentation": {
        "echo": true,
        "panel": "shared",
        "clear": true
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "test",
      "type": "shell",
      "command": "make test",
      "presentation": {
        "echo": true,
        "panel": "shared",
        "clear": true
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "watch.nov",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/watch_nov.sh",
      "args": [
        "${workspaceFolder}",
        "${workspaceFolder}/bin/nove"
      ],
      "isBackground": true,
      "problemMatcher": "$novus",
    }
  ]
}
