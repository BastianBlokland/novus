assertEq(WeekDay(timeEpoch() + days(5)), WeekDay.Tuesday)
assertEq(WeekDay(timeEpoch() + days(6)), WeekDay.Wednesday)
assertEq(WeekDay(timeEpoch() + days(7)), WeekDay.Thursday)

assertEq(nanosecond().nanoseconds(), 1)
