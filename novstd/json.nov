assert(
  jsonStringEscape("\"Hello\nWorld\"") == "\\\"Hello\\nWorld\\\"" &&
  jsonStringEscape("\"\\\b\f\n\r\t") == "\\\"\\\\\\b\\f\\n\\r\\t" &&
  jsonStringEscape("·öª·õñ ·ö≥·öπ·ö´·ö¶ ·ö¶·ö´·õè") == "·öª·õñ ·ö≥·öπ·ö´·ö¶ ·ö¶·ö´·õè")

assert(
  p = jsonNullParser();
  p("")     is ParseFailure &&
  p("null") == JsonNull() &&
  p("NULL") is ParseFailure)

assert(
  p = jsonNumberParser();
  p("")             is ParseFailure &&
  p("123")          == 123.0 &&
  p("123.123")      == 123.123 &&
  p("-1")           == -1.0 &&
  p("-123.123")     == -123.123 &&
  p("0.123")        == .123 &&
  p("0E1")          == 0.0 &&
  p("0e1")          == 0.0 &&
  p("1E1")          == 10.0 &&
  p("1e1")          == 10.0 &&
  p("1E-3")         == .001 &&
  p("1e-3")         == .001 &&
  p("-123.123e-2")  == -1.23123 &&
  p("-123.123e+2")  == -12312.3 &&
  p("-123.123e2")   == -12312.3)

assert(
  p = jsonBoolParser();
  p("")       is ParseFailure &&
  p("true")   == true &&
  p("false")  == false &&
  p("TRUE")   is ParseFailure &&
  p("FALSE")  is ParseFailure)

assert(
