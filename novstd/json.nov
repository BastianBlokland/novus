  p = jsonArrayParser(jsonValueParser());
  p("")             is ParseFailure &&
  p("[")            is ParseFailure &&
  p("[,")           is ParseFailure &&
  p("[,]")          is ParseFailure &&
  p("[233 123]")    is ParseFailure &&
  p("[233,]")       is ParseFailure &&
  p("[233 ,  ]")    is ParseFailure &&
  p("[233, 123 ,]") is ParseFailure)

