import "std.nov"
import "vec3.nov"

// -- Types

struct Ray3 = Vec3 origin, Vec3 dir

// -- Conversions

fun string(Ray3 r) "[" + r.origin.string() + "->" + r.dir.string() + ']'

// -- Operators

fun [](Ray3 r, float t) -> Vec3
  r.origin + r.dir * t

// -- Functions

fun distOnRay(Ray3 r, Vec3 p) -> float
  dot(p - r.origin, r.dir)
